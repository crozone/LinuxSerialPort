<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>netstandard2.0; net461</TargetFrameworks>
    <Title>crozone.SerialPorts.WindowsSerialPort</Title>
    <RootNamespace>crozone.SerialPorts.WindowsSerialPort</RootNamespace>
    <AssemblyName>crozone.SerialPorts.WindowsSerialPort</AssemblyName>
    <Description>Wrapper for System.IO.Ports.SerialPort that implements crozone.SerialPorts.Abstractions.ISerialPort</Description>
    <Authors>Ryan Crosby</Authors>
    <PackageId>crozone.SerialPorts.WindowsSerialPort</PackageId>
    <Version>2.0.2</Version>
    <Copyright>Copyright © Ryan Crosby 2017 - 2019</Copyright>
    <PackageTags>Windows serial port wrapper ISerialPort</PackageTags>
    <PackageProjectUrl>https://github.com/crozone/LinuxSerialPort</PackageProjectUrl>
    <PackageLicenseUrl>https://opensource.org/licenses/MIT</PackageLicenseUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <RepositoryUrl>https://github.com/crozone/LinuxSerialPort</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageReleaseNotes>Use updated abstractions version. Fix Parity property. Add InfiniteTimout constant.</PackageReleaseNotes>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All" />
  </ItemGroup>


  <ItemGroup>
    <PackageReference Include="System.IO.Ports" Version="4.5.0" />
    <PackageReference Include="crozone.SerialPorts.Abstractions" Version="2.0.3" />
  </ItemGroup>
</Project>
